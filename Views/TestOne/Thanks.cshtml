
@model asp_core_mvc.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Спасибо!</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">

</head>
<body class="text-center">
    <p>
        <h1>Спасибо, @Model.Name </h1>
        @if (Model.WillAttend == true)
        {
            @:Прекрасно, что вы придете! Выпивка уже в холодильнике
        }
        else
        {
            @:Жаль, что мы не встретимсч. Может в следующий раз.
        }
    </p>
    Посмотреть <a class="nav-link" asp-action="ListResponses">список</a> людей которые придут.
</body>
</html>