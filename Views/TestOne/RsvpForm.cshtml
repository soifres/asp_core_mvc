@model asp_core_mvc.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форма приглашения</title>
    <link rel="stylesheet" href="/css/styles.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css">

</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>    
        <div class="panel-body">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Ваше имя:</label>
                    <input class="form-control" asp-for="Name"/>
                </div>
                    <div class="form-group">
                        <label asp-for="Email">Ваша почта:</label>
                        <input class="form-control" asp-for="Email"/>
                </div>       
                <div class="form-group">
                        <label asp-for="Phone">Ваш телефон:</label>
                        <input class="form-control" asp-for="Phone"/>
                </div>
                <div class="form-group">
                    <label>Вы придете?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Выберите вариант</option>
                        <option value="true">Да, я приду</option>
                        <option value="false">Нет, я не приду</option>
                    </select>
                </div>            
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">Подтвердить</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>